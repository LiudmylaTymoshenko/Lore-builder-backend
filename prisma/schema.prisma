generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
}

//////////////////////////////////////////////////////
// USER & AUTH
//////////////////////////////////////////////////////

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  lores     Lore[]
}

//////////////////////////////////////////////////////
// LORE (UNIVERSE)
//////////////////////////////////////////////////////

model Lore {
  id          String   @id @default(uuid())
  name        String
  type        String
  description String
  imageUrl    String?

  createdAt   DateTime @default(now())

  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  sources     Source[]

  // Flow state stored as JSON (matches your frontend data structure)
  events      Json?    @default("[]")
  characters  Json?    @default("[]")
  connections Json?    @default("[]")
  nodes       Json?    @default("[]")
  edges       Json?    @default("[]")
}

//////////////////////////////////////////////////////
// SOURCE (BOOK / FILM / CODEX)
//////////////////////////////////////////////////////

model Source {
  id        String   @id @default(uuid())
  title     String
  type      String
  canon     String   @default("official")

  createdAt DateTime @default(now())

  loreId    String
  lore      Lore     @relation(fields: [loreId], references: [id], onDelete: Cascade)

  @@index([loreId])
}